
<form action="/Login" method="POST">
	<h1>Login</h1>
	<div class="form-group">
		<label>Username: </label>
		<input 
			type="text" 
			name="username" 
			id="username" 
			placeholder="Enter your username" 
			required />
	</div>
	<div class="form-group">
		<label>Password:</label>
		<input 
			type="password" 
			name="password" 
			id="password"
			placeholder="Enter your password" 
			required />
	</div>
	<div>
		<input type="submit" value="Login" />
	</div>
</form>